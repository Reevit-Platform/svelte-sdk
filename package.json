{
  "name": "@reevit/svelte",
  "version": "0.3.7",
  "description": "Unified Payment Widget for Svelte Applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.mjs",
  "exports": {
    ".": {
