  "bugs": {
    "url": "https://github.com/Reevit-Platform/svelte/issues"
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0"
  },
  "dependencies": {
    "@reevit/core": "^0.3.7",
    "@hubteljs/checkout": "^1.0.4"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
